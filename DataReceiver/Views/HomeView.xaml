<Page x:Class="DataReceiver.Views.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataReceiver.Views"
      mc:Ignorable="d" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="420"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <hc:ScrollViewer IsInertiaEnabled="True">
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10" VerticalAlignment="Stretch">
                

                <Button Content="Text"/>

            </StackPanel>
        </hc:ScrollViewer>

        <!--<TextBlock Text="{Binding Title}" FontSize="40"/>-->

    </Grid>
</Page>
