<UserControl x:Class="DataReceiver.Views.TcpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataReceiver.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:DataReceiver.ViewModels.Community"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DataContext="{d:DesignInstance Type=vm:TcpViewModel}"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vl="clr-namespace:DataReceiver.Services.Validation">

    <hc:SimplePanel Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!--输入区-->
                <Grid Grid.Row="0">
                    <WrapPanel Orientation="Horizontal">
                        <hc:ComboBox hc:InfoElement.ShowClearButton="True"
                            hc:TitleElement.TitlePlacement="Left"
                            hc:TitleElement.Title="IP"
                            hc:TitleElement.MarginOnTheLeft="10"
                            hc:InfoElement.Necessary="True"
                            FontSize="14"
                                     Width="260"
                            IsEditable="True"
                            FontFamily="Consolas"
                            hc:Margin="5">
                            <hc:ComboBox.Text>
                                <Binding Path="Ip"
                                 UpdateSourceTrigger="PropertyChanged"
                                 Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <vl:IpValidation />
                                    </Binding.ValidationRules>
                                </Binding>
                            </hc:ComboBox.Text>
                        </hc:ComboBox>

                        <hc:ComboBox hc:InfoElement.ShowClearButton="True"
                            hc:TitleElement.TitlePlacement="Left"
                            hc:TitleElement.Title="Port"
                            hc:TitleElement.MarginOnTheLeft="10"
                            hc:InfoElement.Necessary="True"
                            FontSize="14"
                                     Width="200"
                            IsEditable="True"
                            FontFamily="Consolas"
                            hc:Margin="5">
                            <hc:ComboBox.Text>
                                <Binding Path="Port"
                                 UpdateSourceTrigger="PropertyChanged"
                                 Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <vl:NumValidation />
                                    </Binding.ValidationRules>
                                </Binding>
                            </hc:ComboBox.Text>
                        </hc:ComboBox>

                        <Button Width="80" Height="30" 
                                Style="{StaticResource ButtonPrimary}" 
                                Command="{Binding StartCommand}" 
                                Content="Start"
                                Margin="30,10,10,10"/>
                        
                        <Button Width="80" Height="30"
                                Style="{StaticResource ButtonDanger}" 
                                Command="{Binding StartCommand}" 
                                Content="Stop"
                                Margin="10"/>
                    </WrapPanel>
                </Grid>

                
                <!--功能区-->
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton Style="{StaticResource ToggleButtonSwitch}" 
                            Width="auto" Margin="20,10,10,10"
                            Content="Auto Connect"
                            FontSize="15"
                            FontFamily="Consolas"
                            IsChecked="{Binding IsAutoConnect}"/>

                        <ToggleButton Style="{StaticResource ToggleButtonSwitch}" 
                            Width="auto" Margin="20,10,10,10"
                            Content="Start HeartBeat"
                            FontSize="15"
                            FontFamily="Consolas"
                            IsChecked="{Binding IsHeartBeat}"/>

                        <hc:TextBox hc:InfoElement.ShowClearButton="True"
                            hc:TitleElement.TitlePlacement="Left"
                            hc:TitleElement.Title="HeartBeat Content"
                            hc:TitleElement.MarginOnTheLeft="10"
                            FontSize="14"
                            FontFamily="Consolas"
                            IsEnabled="{Binding IsHeartBeat}"
                            hc:Margin="10"
                            Width="330" Height="40">
                            <hc:TextBox.Text>
                                <Binding Path="Port"
                                 UpdateSourceTrigger="PropertyChanged"
                                 Mode="TwoWay">
                                    <Binding.ValidationRules>
                                        <vl:NullValidation />
                                    </Binding.ValidationRules>
                                </Binding>
                            </hc:TextBox.Text>
                        </hc:TextBox>

                    </StackPanel>

                </Grid>
            </Grid>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Separator Margin="0,15,0,0"/>
                
                <ContentControl Content="Message" FontSize="27" FontWeight="Thin" FontFamily="Bell MT" Grid.Row="1" Margin="0,20,0,10"></ContentControl>
                <!--<Label Content="Message" Grid.Row="0" FontSize="20" Height="45" Style="{StaticResource LabelSuccess}"
                       Margin="0,10,10,10" HorizontalAlignment="Left"/>-->
                <hc:ScrollViewer Style="{StaticResource ScrollViewerUpDown}" Grid.Row="2">
                    <ListBox Background="AliceBlue" MinHeight="200" HorizontalAlignment="Stretch" MinWidth="900" />
                </hc:ScrollViewer>
            </Grid>
        </Grid>
    </hc:SimplePanel>

</UserControl>
