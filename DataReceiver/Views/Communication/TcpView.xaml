<UserControl x:Class="DataReceiver.Views.Communication.TcpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataReceiver.Views.Communication"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:DataReceiver.ViewModels.Communication"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DataContext="{d:DesignInstance Type=vm:TcpViewModel}"
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:cvt="clr-namespace:DataReceiver.Helper"
             FontFamily="Arial">

    <UserControl.Resources>
        <cvt:ColorConverter x:Key="NumConverter"/>
    </UserControl.Resources>

    <hc:SimplePanel Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="160"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--输入区-->
                <Grid Grid.Row="0">
                    <WrapPanel Orientation="Horizontal">
                        <!--ip-->
                        <hc:ComboBox hc:InfoElement.ShowClearButton="True"
                            hc:TitleElement.TitlePlacement="Left"
                            hc:TitleElement.Title="IP"
                            hc:TitleElement.MarginOnTheLeft="10"
                            hc:InfoElement.Necessary="True"
                            FontSize="14"
                            Width="260"
                            IsEditable="True"
                            IsEnabled="{Binding ElementName=Connect, Path=IsEnabled}"
                            Text="{Binding Config.Ip}"  
                            hc:Margin="5">
                        </hc:ComboBox>

                        <!--端口-->
                        <hc:ComboBox hc:InfoElement.ShowClearButton="True"
                            hc:TitleElement.TitlePlacement="Left"
                            hc:TitleElement.Title="Port"
                            hc:TitleElement.MarginOnTheLeft="10"
                            hc:InfoElement.Necessary="True"
                            FontSize="14"
                            Width="200"
                            Text="{Binding Config.Port}"
                            IsEditable="True"
                            IsEnabled="{Binding ElementName=Connect, Path=IsEnabled}"
                            hc:Margin="5">
                        </hc:ComboBox>

                        <!--开始按钮-->
                        <Button Width="80" Height="30" x:Name="Connect"
                                Style="{StaticResource ButtonSuccess}" 
                                Command="{Binding ConnectCommand}" 
                                Content="Start"
                                Margin="30,10,10,10"/>

                        <!--停止按钮-->
                        <Button Width="80" Height="30" x:Name="Disconnect"
                                Style="{StaticResource ButtonDanger}" 
                                Command="{Binding DisconnectCommand}" 
                                Content="Stop"
                                Margin="10,10,30,10"/>

                        <!--状态图标-->
                        <Path x:Name="state_icon"
                                Stroke="{Binding Runtimes.State, Converter={StaticResource NumConverter}}"
                                Fill="{Binding Runtimes.State, Converter={StaticResource NumConverter}}"
                                Data="{StaticResource connect_geom}"   
                                Stretch="Uniform"
                                Height="30"
                                Width="30" Margin="60,10,10,10" HorizontalAlignment="Right"/>
                    </WrapPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">

                        <!--选择功能区-->
                        <StackPanel Orientation="Vertical">
                            <ToggleButton Style="{StaticResource ToggleButtonSwitch.Small}" 
                                Width="auto" Margin="20,10,10,10"
                                Content="Auto Connect"
                                FontSize="15"
                                FontFamily="Calibri"
                                IsEnabled="{Binding ElementName=Connect, Path=IsEnabled}"
                                IsChecked="{Binding ReconnectConfig.IsEnable}"/>

                            <ToggleButton  x:Name="EnableHeartBeat"
                                Style="{StaticResource ToggleButtonSwitch.Small}" 
                                Width="auto" Margin="20,10,10,10"
                                Content="Start HeartBeat"
                                FontSize="15"
                                FontFamily="Calibri"
                                IsEnabled="{Binding ElementName=Connect, Path=IsEnabled}"
                                IsChecked="{Binding HeartBeatConfig.IsEnable}"/>
                        </StackPanel>

                        <!--心跳-->
                        <StackPanel Margin="20,0,0,0">
                            <hc:TextBox hc:InfoElement.ShowClearButton="True"
                                hc:TitleElement.TitlePlacement="Top"
                                hc:TitleElement.Title="Response HeartBeat"
                                hc:InfoElement.Necessary="{Binding ElementName=EnableHeartBeat, Path=IsChecked}"
                                FontSize="14"
                                Text="{Binding HeartBeatConfig.Response}"
                                IsEnabled="{Binding ElementName=EnableHeartBeat, Path=IsChecked}"
                                hc:Margin="10"
                                hc:InfoElement.ContentHeight="40"
                                hc:Width="220" hc:Height="65">
                            </hc:TextBox>
                        </StackPanel>

                        <!--发送-->
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <hc:TextBox Margin="10,20,20,10" Width="220"
                                        Text="{Binding SendMessage}"
                                        hc:InfoElement.ShowClearButton="True"
                                        hc:InfoElement.Placeholder="Input message for send" FontSize="17"
                                        IsEnabled="{Binding ElementName=Disconnect, Path=IsEnabled}"/>
                            
                            <Button Style="{StaticResource ButtonPrimary}" 
                                    Content="Send" Width="120" Height="30"
                                    Command="{Binding SendCommand}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>

            <!--Message-->
            <Grid Grid.Row="1">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="2" MinHeight="200" HorizontalAlignment="Stretch" MinWidth="900"
                             ItemsSource="{Binding ReceivedDataCollection}" ScrollViewer.VerticalScrollBarVisibility="Visible" />
            </Grid>
        </Grid>
    </hc:SimplePanel>

</UserControl>
